{
  "name": "imports-detector",
  "version": "0.2.6",
  "description": "Detect and analyze imports in JavaScript/TypeScript applications. Find files importing specific modules, list all imports, and generate dependency reports.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "imports-detector": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "node bin/cli.js",
    "prepublishOnly": "npm run build",
    "test": "node tests/basic.test.js",
    "test:watch": "node --watch tests/basic.test.js"
  },
  "keywords": [
    "imports",
    "dependencies",
    "ast",
    "static-analysis",
    "code-analysis",
    "dependency-graph",
    "import-detection",
    "code-visualization"
  ],
  "author": "al-maqdi",
  "license": "MIT",
  "repository": "github:almaqdi/imports-detector",
  "bugs": {
    "url": "https://github.com/almaqdi/imports-detector/issues"
  },
  "homepage": "https://github.com/almaqdi/imports-detector#readme",
  "dependencies": {
    "@babel/parser": "^7.25.4",
    "@babel/traverse": "^7.25.4",
    "@babel/types": "^7.25.4",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "get-tsconfig": "^4.13.1",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^22.5.5",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ]
}
